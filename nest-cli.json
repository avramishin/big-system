{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "echo": {
      "type": "application",
      "root": "apps/echo",
      "entryFile": "main",
      "sourceRoot": "apps/echo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/echo/tsconfig.app.json"
      }
    },
    "monolog": {
      "type": "application",
      "root": "apps/monolog",
      "entryFile": "main",
      "sourceRoot": "apps/monolog/src",
      "compilerOptions": {
        "tsConfigPath": "apps/monolog/tsconfig.app.json"
      }
    }
  }
}